{{#if template}}
  {{yield}}
{{else}}

  {{#unless isPending}}
    
    {{#if isSettled}}
      {{#if isFulfilled}}
        {{#each page in pages}}
          {{pdf-page page=page scale=scale}}
        {{/each}}
      {{/if}}
      {{#if isRejected}}
        Rejected: {{reason}}
      {{/if}}
    {{/if}}

  {{/unless}}
  
{{/if}}